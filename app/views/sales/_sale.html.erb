<div class="large-3 medium-4 small-12 columns article<%= " end" if sale_counter + 1 == @sales.count %>">
    <h2><%= sale.article.name %></h2>
    <p>
      <img src="<%= sale.article.image.url(:thumb) %>" alt="preview of <%= sale.article.name %>">
    </p>
    <span id="countdown-<%= sale.id %>" class="button medium success"></span>
    <script type="text/javascript">

      //We get the time in database in UTC and we convert it to the user timezone
      var time = new Date("<%= sale.date_end.strftime("%Y/%m/%d %T") %>" + " UTC");
      time = format(time,"yyyy/MM/dd hh:mm:ss");

      $('#countdown-<%= sale.id %>').countdown(time)
      .on('update.countdown', function(event) {
         var format = '%H:%M:%S';
         if(event.offset.days > 0) {
             format = '%-d jour%!d ' + format;
           }
         if(event.offset.weeks > 0) {
             format = '%-w semaine%!w ' + format;
           }
         $(this).html(event.strftime(format));
        })
      .on('finish.countdown', function(event) {
           $(this).html('La vente est termin√©e')
            .parent().addClass('disabled');

        });

    </script>
    <p class="text-left detail">
        <a class="button large" href="<%= url_for(action: :show, id: sale.id) %>">
            Show
        </a>
        <a class="button large" href="<%= url_for(action: :buy, id: sale.id) %>">
            <%= sale.price %> pts
        </a>
    </p>
</div>
